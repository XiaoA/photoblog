<%= render 'navigation' %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <p id="notice"><%= notice %></p>
      <% @posts.each do |post| %>

        <h1><%= link_to post.title, post %></h1>
        <div class="container">
          <div class="row">
            <div class="col-md-6"><p><%= post.created_at.strftime("%B %-d, %Y") %> by: Andrew</p> </div>
            <div class="col-md-6"><%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>

        </div>
        <div class="container"><div class="img-responsive"><a href="<%= post_url(post) %>"><%= image_tag(post.image.profile_size.url) %></a></div></div><br>
        <h4><%= post.description %></h4>
        <br>

        <hr>
      <% end %>

      <br>


    </div>
  </div>
</div>
